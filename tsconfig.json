{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "downlevelIteration": true,
        "declaration": true,
        "declarationDir": "types"
    },
    "include": ["src"]
}
